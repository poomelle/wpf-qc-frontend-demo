<UserControl x:Class="ChemsonLabApp.Controls.SuffixSelector.SuffixSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChemsonLabApp.Controls.SuffixSelector"
             mc:Ignorable="d"
             Name="suffixControl">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <RadioButton
            Grid.Column="0"
            Grid.Row="0"
            Margin="0 0 20 10"
            VerticalAlignment="Center"
            GroupName="Suffix"
            Content="Default"
            Tag="Default"
            IsChecked="True"
            Checked="RadioButton_Checked"/>
        <RadioButton
            Grid.Column="1"
            Grid.Row="0"
            Margin="0 0 20 10"
            VerticalAlignment="Center"
            GroupName="Suffix"
            Content="RS"
            Tag="RS"
            IsChecked="False"
            Checked="RadioButton_Checked"/>
        <RadioButton
            Grid.Column="2"
            Grid.Row="0"
            Margin="0 0 20 10"
            VerticalAlignment="Center"
            GroupName="Suffix"
            Content="RRS"
            Tag="RRS"
            IsChecked="False"
            Checked="RadioButton_Checked"/>
        <RadioButton
            Grid.Column="3"
            Grid.Row="0"
            Margin="0 0 20 10"
            VerticalAlignment="Center"
            GroupName="Suffix"
            Content="RT"
            Tag="RT"
            IsChecked="False"
            Checked="RadioButton_Checked"/>
        <RadioButton
            Grid.Column="4"
            Grid.Row="0"
            Margin="0 0 20 10"
            VerticalAlignment="Center"
            GroupName="Suffix"
            Content="Remix"
            Tag="Remix"
            IsChecked="False"
            Checked="RadioButton_Checked"/>
        <RadioButton
            Grid.Column="0"
            Grid.Row="1"
            Margin="0 0 20 0"
            VerticalAlignment="Center"
            GroupName="Suffix"
            Content="Rework"
            Tag="Rework"
            IsChecked="False"
            Checked="RadioButton_Checked"/>
        <RadioButton
            Grid.Column="1"
            Grid.Row="1"
            Margin="0 0 20 0"
            VerticalAlignment="Center"
            GroupName="Suffix"
            Content="2.00min"
            Tag="2.00min"
            IsChecked="False"
            Checked="RadioButton_Checked"/>
        <RadioButton
            Grid.Column="2"
            Grid.Row="1"
            Margin="0 0 20 0"
            VerticalAlignment="Center"
            GroupName="Suffix"
            Content="4.00min"
            Tag="4.00min"
            IsChecked="False"
            Checked="RadioButton_Checked"/>
        <RadioButton
            Grid.Column="3"
            Grid.Row="1"
            Margin="0 0 20 0"
            VerticalAlignment="Center"
            GroupName="Suffix"
            Content="Cal"
            Tag="Cal"
            IsChecked="False"
            Checked="RadioButton_Checked"/>
    </Grid>
</UserControl>
