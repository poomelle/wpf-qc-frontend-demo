<ContentControl x:Class="ChemsonLabApp.MVVM.Views.Report.NewReportView"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                xmlns:local="clr-namespace:ChemsonLabApp.MVVM.Views.Report"
                xmlns:converters="clr-namespace:ChemsonLabApp.Converters"
                xmlns:behaviors="http://schemas.microsoft.com/xaml/behaviors"
                xmlns:Icons="http://metro.mahapps.com/winfx/xaml/iconpacks"
                mc:Ignorable="d">

    <ContentControl.Resources>
        <converters:ReportTestTypeToBoolConverter x:Key="ReportTestTypeToBoolConverter"/>
        <converters:BoolToResultConverter x:Key="BoolToResultConverter"/>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <DataTemplate
            x:Key="NewReportTemplate">
            <Border
                Style="{StaticResource DataGridItemBorder}">
                <Grid
                    VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1.2*"/>
                        <ColumnDefinition Width="0.7*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="1.1*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>
                    <Label
                        Grid.Column="0"
                        Style="{StaticResource SmallDataGridLabel}"
                        Content="{Binding testResult.product.name}"/>
                    <Label
                        Grid.Column="1"
                        Style="{StaticResource SmallDataGridLabel}"
                        Content="{Binding testResult.machine.name}"/>
                    <StackPanel
                        Grid.Column="2"
                        Orientation="Horizontal">
                        <Label
                            x:Name="BatchName"
                            Style="{StaticResource SmallDataGridLabel}"
                            Content="{Binding batch.batchName}"
                            Margin="0 0 -5 0"/>
                        <Label
                            Style="{StaticResource SmallDataGridLabel}"
                            Content="{Binding batch.suffix}"/>
                    </StackPanel>
                    <!--<Label
                        x:Name="BatchName"
                        Grid.Column="2"
                        Style="{StaticResource SmallDataGridLabel}"
                        Content="{Binding batch.batchName}"/>-->
                    <Label
                        Grid.Column="3"
                        Style="{StaticResource SmallDataGridLabel}"
                        Content="{Binding testResult.testDate}"/>
                    <ComboBox
                        Grid.Column="4"
                        ItemsSource="{Binding DataContext.Standards, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ListBox}}}"
                        SelectedItem="{Binding DataContext.SelectedSTD, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ListBox}}}"
                        Style="{StaticResource DataGridComboBox}"
                        Width="60"
                        HorizontalAlignment="Center"
                        IsEnabled="{Binding testResult.testType, Converter={StaticResource ReportTestTypeToBoolConverter}}">
                        <behaviors:Interaction.Triggers>
                            <behaviors:EventTrigger EventName="SelectionChanged">
                                <behaviors:InvokeCommandAction 
                                    Command="{Binding DataContext.CalculateTorFusCommand, RelativeSource={RelativeSource AncestorType={x:Type ListBox}}}"/>
                            </behaviors:EventTrigger>
                        </behaviors:Interaction.Triggers>
                    </ComboBox>
                    <TextBox
                        Grid.Column="5"
                        Style="{StaticResource SmallInputTextBox}"
                        HorizontalAlignment="Center"
                        Text="{Binding testResult.torque, Mode=TwoWay}">
                        <behaviors:Interaction.Triggers>
                            <behaviors:EventTrigger EventName="LostFocus">
                                <behaviors:InvokeCommandAction 
                                    Command="{Binding DataContext.CalculateTorFusCommand, RelativeSource={RelativeSource AncestorType={x:Type ListBox}}}"/>
                            </behaviors:EventTrigger>
                        </behaviors:Interaction.Triggers>
                    </TextBox>
                    <TextBox
                        Grid.Column="6"
                        Style="{StaticResource SmallInputTextBox}"
                        HorizontalAlignment="Center"
                        Text="{Binding testResult.fusion, Mode=TwoWay}">
                        <behaviors:Interaction.Triggers>
                            <behaviors:EventTrigger EventName="LostFocus">
                                <behaviors:InvokeCommandAction 
                                    Command="{Binding DataContext.CalculateTorFusCommand, RelativeSource={RelativeSource AncestorType={x:Type ListBox}}}"/>
                            </behaviors:EventTrigger>
                        </behaviors:Interaction.Triggers>
                    </TextBox>
                    <Label
                        x:Name="torqueDiffLabel"
                        Grid.Column="7"
                        Style="{StaticResource SmallDataGridLabel}"
                        HorizontalAlignment="Center"
                        HorizontalContentAlignment="Right"
                        Content="{Binding torqueDiff}"
                        ContentStringFormat="{}{0}%"/>
                    <Label
                        x:Name="fusionDiffLabel"
                        Grid.Column="8"
                        Style="{StaticResource SmallDataGridLabel}"
                        HorizontalAlignment="Center"
                        HorizontalContentAlignment="Right"
                        Content="{Binding fusionDiff}"
                        ContentStringFormat="{}{0}%"/>
                    <Label
                        Grid.Column="9"
                        Style="{StaticResource SmallDataGridLabel}"
                        HorizontalAlignment="Center">
                        <Label.Content>
                            <MultiBinding Converter="{StaticResource BoolToResultConverter}">
                                <Binding Path="result"/>
                                <Binding ElementName="BatchName" Path="Content"/>
                                <Binding Path="torqueDiff"/>
                                <Binding Path="fusionDiff"/>
                                <Binding Path="DataContext.TorqueWarning" RelativeSource="{RelativeSource AncestorType={x:Type ListBox}}"/>
                                <Binding Path="DataContext.FusionWarning" RelativeSource="{RelativeSource AncestorType={x:Type ListBox}}"/>
                            </MultiBinding>
                        </Label.Content>
                    </Label>
                    <Button
                        Grid.Column="10"
                        Style="{StaticResource GridRemoveButton}"
                        HorizontalAlignment="Right"
                        Command="{Binding DataContext.RemoveBatchTestResultCommand, RelativeSource={RelativeSource AncestorType={x:Type ListBox}}}"
                        CommandParameter="{Binding}">
                        <Icons:PackIconMaterial
                            Style="{StaticResource GridButtonIcon}"
                            Kind="DeleteOutline"/>
                    </Button>
                </Grid>
            </Border>
        </DataTemplate>
    </ContentControl.Resources>
    
    <Grid
        Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid
            Grid.Row="0"
            Margin="0 0 0 30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <StackPanel
                Grid.Column="0"
                Orientation="Horizontal"
                VerticalAlignment="Center"
                HorizontalAlignment="Left">
                <ComboBox
                    ItemsSource="{Binding Products}"
                    DisplayMemberPath="name"
                    SelectedItem="{Binding SelectedProduct}"
                    Text="Select a Product"
                    Style="{StaticResource BaseComboBoxStyle}"
                    Margin="0 0 30 0">
                </ComboBox>
                <Label
                    Content="Batch number"
                    VerticalAlignment="Center"
                    FontSize="15"
                    Margin="0 0 10 0"/>
                <TextBox
                    Style="{StaticResource MediumInputTextBox}"
                    Height="40"
                    Width="60"
                    Margin="0 0 10 0"
                    Text="{Binding FromBatch}"/>
                <Label
                    Content="to"
                    VerticalAlignment="Center"
                    FontSize="15"
                    Margin="0 0 10 0"/>
                <TextBox
                    Style="{StaticResource MediumInputTextBox}"
                    Height="40"
                    Width="60"
                    Margin="0 0 30 0"
                    Text="{Binding ToBatch}"/>
                <Label
                    Content="Test Date"
                    VerticalAlignment="Center"
                    FontSize="15"
                    Margin="0 0 10 0"/>
                <DatePicker
                    Background="{StaticResource White}"
                    Height="40"
                    Width="130"
                    FontSize="16"
                    VerticalContentAlignment="Center"
                    SelectedDate="{Binding TestDate}"/>
            </StackPanel>
            <Button
                Grid.Column="1"
                Style="{StaticResource BaseButton}"
                Content="Add To Report"
                Command="{Binding SearchBatchTestResultCommand}"/>
        </Grid>
        <Grid
            Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <Grid
                Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <StackPanel
                    Grid.Column="0"
                    Grid.Row="0"
                    Orientation="Horizontal"
                    Margin="0 0 20 0">
                    <RadioButton
                        VerticalAlignment="Center"
                        GroupName="Suffix"
                        IsChecked="{Binding Default, Mode=TwoWay}"/>
                    <Label 
                        Style="{StaticResource SmallDataGridHeader}"
                        Content="Default"/>
                </StackPanel>
                <StackPanel
                    Grid.Column="1"
                    Grid.Row="0"
                    Orientation="Horizontal"
                    Margin="0 0 20 0">
                    <RadioButton
                        VerticalAlignment="Center"
                        GroupName="Suffix"
                        IsChecked="{Binding RS, Mode=TwoWay}"/>
                    <Label 
                        Style="{StaticResource SmallDataGridHeader}"
                        Content="RS"/>
                </StackPanel>
                <StackPanel
                    Grid.Column="2"
                    Grid.Row="0"
                    Orientation="Horizontal"
                    Margin="0 0 20 0">
                    <RadioButton
                        VerticalAlignment="Center"
                        GroupName="Suffix"
                        IsChecked="{Binding RRS, Mode=TwoWay}"/>
                    <Label 
                        Style="{StaticResource SmallDataGridHeader}"
                        Content="RRS"/>
                </StackPanel>
                <StackPanel
                    Grid.Column="3"
                    Grid.Row="0"
                    Orientation="Horizontal"
                    Margin="0 0 20 0">
                    <RadioButton
                        VerticalAlignment="Center"
                        GroupName="Suffix"
                        IsChecked="{Binding RT, Mode=TwoWay}"/>
                    <Label 
                        Style="{StaticResource SmallDataGridHeader}"
                        Content="RT"/>
                </StackPanel>
                <StackPanel
                    Grid.Column="4"
                    Grid.Row="0"
                    Orientation="Horizontal"
                    Margin="0 0 20 0">
                    <RadioButton
                        VerticalAlignment="Center"
                        GroupName="Suffix"
                        IsChecked="{Binding Remix, Mode=TwoWay}"/>
                    <Label 
                        Style="{StaticResource SmallDataGridHeader}"
                        Content="Remix"/>
                </StackPanel>
                <StackPanel
                    Grid.Column="0"
                    Grid.Row="1"
                    Orientation="Horizontal"
                    Margin="0 0 20 0">
                    <RadioButton
                        VerticalAlignment="Center"
                        GroupName="Suffix"
                        IsChecked="{Binding Rework, Mode=TwoWay}"/>
                    <Label 
                        Style="{StaticResource SmallDataGridHeader}"
                        Content="Rework"/>
                </StackPanel>
                <StackPanel
                    Grid.Column="1"
                    Grid.Row="1"
                    Orientation="Horizontal"
                    Margin="0 0 20 0">
                    <RadioButton
                        VerticalAlignment="Center"
                        GroupName="Suffix"
                        IsChecked="{Binding Min2, Mode=TwoWay}"/>
                    <Label 
                        Style="{StaticResource SmallDataGridHeader}"
                        Content="2.00min"/>
                </StackPanel>
                <StackPanel
                    Grid.Column="2"
                    Grid.Row="1"
                    Orientation="Horizontal"
                    Margin="0 0 20 0">
                    <RadioButton
                        VerticalAlignment="Center"
                        GroupName="Suffix"
                        IsChecked="{Binding Min4, Mode=TwoWay}"/>
                    <Label 
                        Style="{StaticResource SmallDataGridHeader}"
                        Content="4.00min"/>
                </StackPanel>
                <StackPanel
                    Grid.Column="3"
                    Grid.Row="1"
                    Orientation="Horizontal"
                    Margin="0 0 20 0">
                    <RadioButton
                        VerticalAlignment="Center"
                        GroupName="Suffix"
                        IsChecked="{Binding Cal, Mode=TwoWay}"/>
                    <Label 
                        Style="{StaticResource SmallDataGridHeader}"
                        Content="Cal"/>
                </StackPanel>
            </Grid>
            <Button
                Grid.Column="1"
                Content="Make Report"
                Style="{StaticResource BaseButton}"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Command="{Binding MakeReportCommand}"/>
        </Grid>
        <Border
            Grid.Row="2"
            Style="{StaticResource DataGridBorder}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.2*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="1.1*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label
                    Grid.Column="0"
                    Content="Product"
                    Style="{StaticResource SmallDataGridHeader}"
                    HorizontalAlignment="Center"
                    HorizontalContentAlignment="Center"
                    VerticalAlignment="Top"/>
                <Label
                    Grid.Column="1"
                    Content="Instrument"
                    Style="{StaticResource SmallDataGridHeader}"
                    HorizontalAlignment="Center"
                    HorizontalContentAlignment="Center"
                    VerticalAlignment="Top"/>
                <Label
                    Grid.Column="2"
                    Content="Batch No."
                    Style="{StaticResource SmallDataGridHeader}"
                    HorizontalAlignment="Center"
                    HorizontalContentAlignment="Center"
                    VerticalAlignment="Top"/>
                <Label
                    Grid.Column="3"
                    Content="Test Date"
                    Style="{StaticResource SmallDataGridHeader}"
                    HorizontalAlignment="Center"
                    HorizontalContentAlignment="Center"
                    VerticalAlignment="Top"/>
                <Label
                    Grid.Column="4"
                    Content="STD"
                    Style="{StaticResource SmallDataGridHeader}"
                    HorizontalAlignment="Center"
                    HorizontalContentAlignment="Center"
                    VerticalAlignment="Top"/>
                <Label
                    Grid.Column="5"
                    Content="Torque (Nm)"
                    Style="{StaticResource SmallDataGridHeader}"
                    HorizontalAlignment="Center"
                    HorizontalContentAlignment="Center"
                    VerticalAlignment="Top"/>
                <StackPanel
                    Grid.Column="6"
                    Orientation="Vertical">
                    <Label
                        Content="Fusion (s)"
                        Style="{StaticResource SmallDataGridHeader}"
                        HorizontalAlignment="Center"
                        HorizontalContentAlignment="Center"
                        VerticalAlignment="Top"/>
                    <Label
                        Content="Warning"
                        Style="{StaticResource SmallDataGridHeader}"
                        HorizontalAlignment="Right"
                        HorizontalContentAlignment="Right"/>
                    <Label
                        Content="Fail"
                        Style="{StaticResource SmallDataGridHeader}"
                        HorizontalAlignment="Right"
                        HorizontalContentAlignment="Right"/>
                </StackPanel>
                <StackPanel
                    Grid.Column="7"
                    Orientation="Vertical">
                    <Label
                        Content="Torque (%)"
                        Style="{StaticResource SmallDataGridHeader}"
                        HorizontalAlignment="Center"
                        HorizontalContentAlignment="Center"/>
                    <Label
                        x:Name="torqueWarningLabel"
                        Content="{Binding TorqueWarning}"
                        ContentStringFormat="{}{0}%"
                        Style="{StaticResource SmallDataGridHeader}"
                        HorizontalAlignment="Center"
                        HorizontalContentAlignment="Center"/>
                    <Label
                        Content="{Binding TorqueFail}"
                        ContentStringFormat="{}{0}%"
                        Style="{StaticResource SmallDataGridHeader}"
                        HorizontalAlignment="Center"
                        HorizontalContentAlignment="Center"/>
                </StackPanel>
                <StackPanel
                    Grid.Column="8"
                    Orientation="Vertical">
                    <Label
                        Content="Fusion (%)"
                        Style="{StaticResource SmallDataGridHeader}"
                        HorizontalAlignment="Center"
                        HorizontalContentAlignment="Center"/>
                    <Label
                        x:Name="fusionWarningLabel"
                        Content="{Binding FusionWarning}"
                        ContentStringFormat="{}{0}%"
                        Style="{StaticResource SmallDataGridHeader}"
                        HorizontalAlignment="Center"
                        HorizontalContentAlignment="Center"/>
                    <Label
                        Content="{Binding FusionFail}"
                        ContentStringFormat="{}{0}%"
                        Style="{StaticResource SmallDataGridHeader}"
                        HorizontalAlignment="Center"
                        HorizontalContentAlignment="Center"/>
                </StackPanel>
                <Label
                    Grid.Column="9"
                    Content="Result"
                    Style="{StaticResource SmallDataGridHeader}"
                    HorizontalAlignment="Center"
                    HorizontalContentAlignment="Center"
                    VerticalAlignment="Top"/>
                <Label
                    Grid.Column="10"
                    Content="Remove"
                    Style="{StaticResource SmallDataGridHeader}"
                    HorizontalAlignment="Center"
                    HorizontalContentAlignment="Center"
                    VerticalAlignment="Top"/>
            </Grid>
        </Border>
        <ListBox
            Grid.Row="3"
            Style="{StaticResource MainMenuListBox}"
            ItemsSource="{Binding BatchTestResults}"
            ItemTemplate="{StaticResource NewReportTemplate}"
            HorizontalContentAlignment="Stretch"
            ItemContainerStyle="{StaticResource DataGridListBoxItem}"/>
    </Grid>
</ContentControl>
