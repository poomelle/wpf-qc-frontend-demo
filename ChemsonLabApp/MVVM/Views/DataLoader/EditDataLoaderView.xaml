<Window x:Class="ChemsonLabApp.MVVM.Views.DataLoader.EditDataLoaderView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChemsonLabApp.MVVM.Views.DataLoader"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow"
        xmlns:converters="clr-namespace:ChemsonLabApp.Converters"
        xmlns:constants="clr-namespace:ChemsonLabApp.Constants"
        Title="Edit Data Loader" Height="720" Width="650">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>
    <ScrollViewer>
        <Grid
            Background="{StaticResource White}">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid
                Grid.Row="0"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button
                    Grid.Column="0"
                    Style="{StaticResource BaseButton}"
                    Content="Close"
                    Margin="15"
                    Click="CancelBtnClick"/>
                <Button
                    Grid.Column="1"
                    Style="{StaticResource BaseButton}"
                    Content="Edit"
                    Command="{Binding EditModeToggleCommand}"
                    Margin="15"/>
                <Button
                    Grid.Column="2"
                    Style="{StaticResource BaseButton}"
                    Background="{StaticResource SaveGreen}"
                    Content="Save"
                    Command="{Binding UpdateDataLoaderCommand}"
                    IsEnabled="{Binding EditMode}"
                    Margin="15"
                    Click="CancelBtnClick"/>
                <Button
                    Grid.Column="3"
                    Style="{StaticResource BaseButton}"
                    Background="{StaticResource DeleteRed}"
                    Content="Delete"
                    Margin="15"
                    Command="{Binding ShowDeleteDataLoaderViewCommand}"/>
            </Grid>
            <Border
                Grid.Row="1"
                Style="{StaticResource UserInputBorder}">
                <Grid
                    Margin="20 10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid
                        Grid.Row="0"
                        Margin="10"
                        VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.4*"/>
                            <ColumnDefinition Width="0.6*"/>
                        </Grid.ColumnDefinitions>
                        <Label
                            Grid.Column="0"
                            Content="Product"
                            Style="{StaticResource InputItemLabel}"/>
                        <Label
                            Grid.Column="1"
                            Content="{Binding TestResult.product.name}"
                            Style="{StaticResource EditViewLabel}"/>
                        <Rectangle
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Style="{StaticResource HorizontalUnderline}"/>
                    </Grid>
                    <Grid
                        Grid.Row="1"
                        Margin="10"
                        VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.4*"/>
                            <ColumnDefinition Width="0.6*"/>
                        </Grid.ColumnDefinitions>
                        <Label
                            Grid.Column="0"
                            Content="Instrument"
                            Style="{StaticResource InputItemLabel}"/>
                        <Label
                            Grid.Column="1"
                            Content="{Binding TestResult.machine.name}"
                            Style="{StaticResource EditViewLabel}"/>
                        <Rectangle
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Style="{StaticResource HorizontalUnderline}"/>
                    </Grid>
                    <Grid
                        Grid.Row="2"
                        Margin="10"
                        VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.4*"/>
                            <ColumnDefinition Width="0.6*"/>
                        </Grid.ColumnDefinitions>
                        <Label
                            Grid.Column="0"
                            Content="Test Date"
                            Style="{StaticResource InputItemLabel}"/>
                        <Label
                            Grid.Column="1"
                            Content="{Binding TestResult.testDate}"
                            Style="{StaticResource EditViewLabel}"/>
                        <Rectangle
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Style="{StaticResource HorizontalUnderline}"/>
                    </Grid>
                    <Grid
                        Grid.Row="3"
                        Margin="10"
                        VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.4*"/>
                            <ColumnDefinition Width="0.6*"/>
                        </Grid.ColumnDefinitions>
                        <Label
                            Grid.Column="0"
                            Content="Test Type"
                            Style="{StaticResource InputItemLabel}"/>
                        <Label
                            Grid.Column="1"
                            Content="{Binding TestResult.testType, Mode=TwoWay}"
                            Style="{StaticResource EditViewLabel}"
                            Visibility="{Binding ViewMode, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        <ComboBox
                            Grid.Column="1"
                            ItemsSource="{x:Static constants:Constants.TestTypes}"
                            Style="{StaticResource DataGridComboBox}"
                            SelectedItem="{Binding TestResult.testType, Mode=TwoWay}"
                            VerticalAlignment="Top"
                            Margin="45,0,0,10"
                            Width="250"
                            Height="40"
                            FontSize="14 "
                            Visibility="{Binding EditMode, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        <Rectangle
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Style="{StaticResource HorizontalUnderline}"/>
                    </Grid>
                    <Grid
                        Grid.Row="4"
                        Margin="10"
                        VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.4*"/>
                            <ColumnDefinition Width="0.6*"/>
                        </Grid.ColumnDefinitions>
                        <Label
                            Grid.Column="0"
                            Content="Batch"
                            Style="{StaticResource InputItemLabel}"/>
                        <Label
                            Grid.Column="1"
                            Content="{Binding Batch.batchName, Mode=TwoWay}"
                            Style="{StaticResource EditViewLabel}"
                            Visibility="{Binding ViewMode, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        <TextBox
                            Grid.Column="1"
                            Style="{StaticResource InputTextBoxWithRadioBtn}"
                            Text="{Binding Batch.batchName, Mode=TwoWay}"
                            Margin="40,0,0,10"
                            Visibility="{Binding EditMode, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        <Rectangle
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Style="{StaticResource HorizontalUnderline}"/>
                    </Grid>
                    <Grid
                        Grid.Row="5"
                        Margin="10"
                        VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.4*"/>
                            <ColumnDefinition Width="0.6*"/>
                        </Grid.ColumnDefinitions>
                        <Label
                            Grid.Column="0"
                            Content="Suffix"
                            Style="{StaticResource InputItemLabel}"/>
                        <Label
                            Grid.Column="1"
                            Content="{Binding Batch.suffix, Mode=TwoWay}"
                            Style="{StaticResource EditViewLabel}"
                            Visibility="{Binding ViewMode, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        <TextBox
                            Grid.Column="1"
                            Style="{StaticResource InputTextBoxWithRadioBtn}"
                            Text="{Binding Batch.suffix, Mode=TwoWay}"
                            Margin="40,0,0,10"
                            Visibility="{Binding EditMode, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        <Rectangle
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Style="{StaticResource HorizontalUnderline}"/>
                    </Grid>
                    <Grid
                        Grid.Row="6"
                        Margin="10"
                        VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.4*"/>
                            <ColumnDefinition Width="0.6*"/>
                        </Grid.ColumnDefinitions>
                        <Label
                            Grid.Column="0"
                            Content="Attempt"
                            Style="{StaticResource InputItemLabel}"/>
                        <Label
                            Grid.Column="1"
                            Content="{Binding TestResult.testNumber, Mode=TwoWay}"
                            Style="{StaticResource EditViewLabel}"
                            Visibility="{Binding ViewMode, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        <TextBox
                            Grid.Column="1"
                            Style="{StaticResource InputTextBoxWithRadioBtn}"
                            Text="{Binding TestResult.testNumber, Mode=TwoWay}"
                            Margin="40,0,0,10"
                            Visibility="{Binding EditMode, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        <Rectangle
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Style="{StaticResource HorizontalUnderline}"/>
                    </Grid>
                    <Grid
                        Grid.Row="7"
                        Margin="10"
                        VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.4*"/>
                            <ColumnDefinition Width="0.6*"/>
                        </Grid.ColumnDefinitions>
                        <Label
                            Grid.Column="0"
                            Content="Torque"
                            Style="{StaticResource InputItemLabel}"/>
                        <Label
                            Grid.Column="1"
                            Content="{Binding EvaluationX.torque, Mode=TwoWay}"
                            Style="{StaticResource EditViewLabel}"
                            Visibility="{Binding ViewMode, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        <TextBox
                            Grid.Column="1"
                            Style="{StaticResource InputTextBoxWithRadioBtn}"
                            Text="{Binding EvaluationX.torque, Mode=TwoWay}"
                            Margin="40,0,0,10"
                            Visibility="{Binding EditMode, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        <Rectangle
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Style="{StaticResource HorizontalUnderline}"/>
                    </Grid>
                    <Grid
                        Grid.Row="8"
                        Margin="10"
                        VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.4*"/>
                            <ColumnDefinition Width="0.6*"/>
                        </Grid.ColumnDefinitions>
                        <Label
                            Grid.Column="0"
                            Content="Fusion"
                            Style="{StaticResource InputItemLabel}"/>
                        <Label
                            Grid.Column="1"
                            Content="{Binding EvaluationT.timeEvalInt, Mode=TwoWay}"
                            Style="{StaticResource EditViewLabel}"
                            Visibility="{Binding ViewMode, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        <TextBox
                            Grid.Column="1"
                            Style="{StaticResource InputTextBoxWithRadioBtn}"
                            Text="{Binding EvaluationT.timeEvalInt, Mode=TwoWay}"
                            Margin="40,0,0,10"
                            Visibility="{Binding EditMode, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        <Rectangle
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Style="{StaticResource HorizontalUnderline}"/>
                    </Grid>
                    <Grid
                        Grid.Row="9"
                        Margin="10"
                        VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.4*"/>
                            <ColumnDefinition Width="0.6*"/>
                        </Grid.ColumnDefinitions>
                        <Label
                            Grid.Column="0"
                            Content="Sample By"
                            Style="{StaticResource InputItemLabel}"/>
                        <Label
                            Grid.Column="1"
                            Content="{Binding Batch.sampleBy, Mode=TwoWay}"
                            Style="{StaticResource EditViewLabel}"
                            Visibility="{Binding ViewMode, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        <TextBox
                            Grid.Column="1"
                            Style="{StaticResource InputTextBoxWithRadioBtn}"
                            Text="{Binding Batch.sampleBy, Mode=TwoWay}"
                            Margin="40,0,0,10"
                            Visibility="{Binding EditMode, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        <Rectangle
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Style="{StaticResource HorizontalUnderline}"/>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </ScrollViewer>
</Window>
