<ContentControl x:Class="ChemsonLabApp.MVVM.Views.Specification.EditSpecificationContenControlView"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                xmlns:converters="clr-namespace:ChemsonLabApp.Converters"
                xmlns:constants="clr-namespace:ChemsonLabApp.Constants"
                xmlns:local="clr-namespace:ChemsonLabApp.MVVM.Views.Specification"
                mc:Ignorable="d">
    
    <ContentControl.Resources>
        <converters:COAConverter x:Key="COAconverter"/>
        <converters:InverseBoolConverter x:Key="InverseBoolConverter"/>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:BoolToActiveConverter x:Key="BoolToActiveConverter"/>
    </ContentControl.Resources>

    <Grid
        Background="{StaticResource White}">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid
            Grid.Row="0"
            VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <Label
                Padding="10"
                Grid.Column="0"
                Content="Edit Specification"
                FontWeight="Bold"
                FontSize="24"
                HorizontalAlignment="Left"
                VerticalContentAlignment="Bottom"/>
            <Button
                Grid.Column="1"
                Style="{StaticResource BaseButton}"
                Background="{StaticResource SaveGreen}"
                Content="Save"
                Margin="15"
                Command="{Binding SaveUpdateSpecificationCommand}"
                HorizontalAlignment="Right"/>
        </Grid>
        <Border
            Grid.Row="2"
            Style="{StaticResource UserInputBorder}">
            <Grid
                Margin="20 10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid
                    Margin="10"
                    Grid.Row="0"
                    Grid.RowSpan="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.4*"/>
                        <ColumnDefinition Width="0.6*"/>
                    </Grid.ColumnDefinitions>
                    <Label
                        Grid.Column="0"
                        Content="Product"
                        Style="{StaticResource InputItemLabel}"/>
                    <Label
                        Grid.Column="1"
                        Content="{Binding Specification.product.name}"
                        Style="{StaticResource EditViewLabel}"/>
                    <Rectangle
                        Grid.Row="1"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Style="{StaticResource HorizontalUnderline}"/>
                </Grid>
                <Grid
                    Grid.Row="2"
                    Margin="10"
                    VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.4*"/>
                        <ColumnDefinition Width="0.6*"/>
                    </Grid.ColumnDefinitions>
                    <Label
                        Grid.Column="0"
                        Content="Instrument"
                        Style="{StaticResource InputItemLabel}"/>
                    <Label
                        Grid.Column="1"
                        Content="{Binding Specification.machine.name}"
                        Style="{StaticResource EditViewLabel}"/>
                    <Rectangle
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Style="{StaticResource HorizontalUnderline}"/>
                </Grid>
                <Grid
                    Grid.Row="3"
                    Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.4*"/>
                        <ColumnDefinition Width="0.6*"/>
                    </Grid.ColumnDefinitions>
                    <Label
                        Grid.Column="0"
                        Content="Temp (°C)"
                        Style="{StaticResource InputItemLabel}"/>
                    <TextBox
                        Grid.Column="1"
                        Style="{StaticResource InputTextBoxWithRadioBtn}"
                        Text="{Binding Specification.temp, Mode=TwoWay}"
                        Margin="40,0,0,10"/>
                    <Rectangle
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Style="{StaticResource HorizontalUnderline}"/>
                </Grid>
                <Grid
                    Grid.Row="4"
                    Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.4*"/>
                        <ColumnDefinition Width="0.6*"/>
                    </Grid.ColumnDefinitions>
                    <Label
                        Grid.Column="0"
                        Content="Load (g)"
                        Style="{StaticResource InputItemLabel}"/>
                    <TextBox
                        Grid.Column="1"
                        Style="{StaticResource InputTextBoxWithRadioBtn}"
                        Text="{Binding Specification.load, Mode=TwoWay}"
                        Margin="40,0,0,10"/>
                    <Rectangle
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Style="{StaticResource HorizontalUnderline}"/>
                </Grid>
                <Grid
                    Grid.Row="5"
                    Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.4*"/>
                        <ColumnDefinition Width="0.6*"/>
                    </Grid.ColumnDefinitions>
                    <Label
                        Grid.Column="0"
                        Content="RPM"
                        Style="{StaticResource InputItemLabel}"/>
                    <TextBox
                        Grid.Column="1"
                        Style="{StaticResource InputTextBoxWithRadioBtn}"
                        Text="{Binding Specification.rpm, Mode=TwoWay}"
                        Margin="40,0,0,10"/>
                    <Rectangle
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Style="{StaticResource HorizontalUnderline}"/>
                </Grid>
                <Grid
                    Grid.Row="6"
                    Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.4*"/>
                        <ColumnDefinition Width="0.6*"/>
                    </Grid.ColumnDefinitions>
                    <Label
                        Grid.Column="0"
                        Content="Torque Warning (%)"
                        Style="{StaticResource InputItemLabel}"/>
                    <TextBox
                        Grid.Column="1"
                        Style="{StaticResource InputTextBoxWithRadioBtn}"
                        Text="{Binding Specification.product.torqueWarning, Mode=TwoWay}"
                        Margin="40,0,0,10"/>
                    <Rectangle
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Style="{StaticResource HorizontalUnderline}"/>
                </Grid>
                <Grid
                    Grid.Row="7"
                    Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.4*"/>
                        <ColumnDefinition Width="0.6*"/>
                    </Grid.ColumnDefinitions>
                    <Label
                        Grid.Column="0"
                        Content="Torque Fail (%)"
                        Style="{StaticResource InputItemLabel}"/>
                    <TextBox
                        Grid.Column="1"
                        Style="{StaticResource InputTextBoxWithRadioBtn}"
                        Text="{Binding Specification.product.torqueFail, Mode=TwoWay}"
                        Margin="40,0,0,10"/>
                    <Rectangle
                       Grid.Column="0"
                       Grid.ColumnSpan="2"
                       Style="{StaticResource HorizontalUnderline}"/>
                </Grid>
                <Grid
                    Grid.Row="8"
                    Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.4*"/>
                        <ColumnDefinition Width="0.6*"/>
                    </Grid.ColumnDefinitions>
                    <Label
                        Grid.Column="0"
                        Content="Fusion Warning (%)"
                        Style="{StaticResource InputItemLabel}"/>
                    <TextBox
                        Grid.Column="1"
                        Style="{StaticResource InputTextBoxWithRadioBtn}"
                        Text="{Binding Specification.product.fusionWarning, Mode=TwoWay}"
                        Margin="40,0,0,10"/>
                    <Rectangle
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Style="{StaticResource HorizontalUnderline}"/>
                </Grid>
                <Grid
                    Grid.Row="9"
                    Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.4*"/>
                        <ColumnDefinition Width="0.6*"/>
                    </Grid.ColumnDefinitions>
                    <Label
                        Grid.Column="0"
                        Content="Fusion Fail (%)"
                        Style="{StaticResource InputItemLabel}"/>
                    <TextBox
                        Grid.Column="1"
                        Style="{StaticResource InputTextBoxWithRadioBtn}"
                        Text="{Binding Specification.product.fusionFail, Mode=TwoWay}"
                        Margin="40,0,0,10"/>
                    <Rectangle
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Style="{StaticResource HorizontalUnderline}"/>
                </Grid>
                <Grid
                    Grid.Row="10"
                    Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.4*"/>
                        <ColumnDefinition Width="0.6*"/>
                    </Grid.ColumnDefinitions>
                    <Label
                        Grid.Column="0"
                        Content="Colour"
                        Style="{StaticResource InputItemLabel}"/>
                    <TextBox
                        Grid.Column="1"
                        Style="{StaticResource InputTextBoxWithRadioBtn}"
                        Text="{Binding Specification.product.colour, Mode=TwoWay}"
                        Margin="40,0,0,10"/>
                    <Rectangle
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Style="{StaticResource HorizontalUnderline}"/>
                </Grid>
                <Grid
                    Grid.Row="11"
                    Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.4*"/>
                        <ColumnDefinition Width="0.6*"/>
                    </Grid.ColumnDefinitions>
                    <Label
                        Grid.Column="0"
                        Content="Update Date"
                        Style="{StaticResource InputItemLabel}"/>
                    <DatePicker
                        Grid.Column="1"
                        SelectedDate="{Binding Specification.product.updateDate, Mode=TwoWay}"
                        Style="{StaticResource InputDatePicker}"/>
                    <Rectangle
                       Grid.Column="0"
                       Grid.ColumnSpan="2"
                       Style="{StaticResource HorizontalUnderline}"/>
                </Grid>
                <Grid
                    Grid.Row="12"
                    Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.4*"/>
                        <ColumnDefinition Width="0.6*"/>
                    </Grid.ColumnDefinitions>
                    <Label
                        Grid.Column="0"
                        Content="In Use"
                        Style="{StaticResource InputItemLabel}"/>
                    <ComboBox
                        Grid.Column="1"
                        ItemsSource="{Binding Status}"
                        Style="{StaticResource InputComboBoxStyle}"
                        SelectedItem="{Binding Specification.inUse, Mode=TwoWay, Converter={StaticResource BoolToActiveConverter}}"
                        Margin="40 0 0 10"/>
                    <Rectangle
                       Grid.Column="0"
                       Grid.ColumnSpan="2"
                       Style="{StaticResource HorizontalUnderline}"/>
                </Grid>
            </Grid>
        </Border>
        <Label
            Margin="20,0"
            Grid.Row="3"
            Content="New Sample and COA Specification"
            FontSize="18"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"/>
        <Border
            Grid.Row="4"
            Style="{StaticResource UserInputBorder}">
            <Grid
                Margin="20 10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid
                    Grid.Row="0"
                    Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.4*"/>
                        <ColumnDefinition Width="0.6*"/>
                    </Grid.ColumnDefinitions>
                    <Label
                        Grid.Column="0"
                        Content="Sample Amount"
                        Style="{StaticResource InputItemLabel}"/>
                    <TextBox
                        Grid.Column="1"
                        Style="{StaticResource InputTextBoxWithRadioBtn}"
                        Text="{Binding Specification.product.sampleAmount, Mode=TwoWay}"
                        Margin="40,0,0,10"/>
                    <Rectangle
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Style="{StaticResource HorizontalUnderline}"/>
                </Grid>
                <Grid
                    Grid.Row="1"
                    Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.4*"/>
                        <ColumnDefinition Width="0.6*"/>
                    </Grid.ColumnDefinitions>
                    <Label
                        Grid.Column="0"
                        Content="Comment"
                        Style="{StaticResource InputItemLabel}"/>
                    <TextBox
                        Grid.Column="1"
                        Style="{StaticResource InputTextBoxWithRadioBtn}"
                        Text="{Binding Specification.product.comment, Mode=TwoWay}"
                        Margin="40,0,0,10"/>
                    <Rectangle
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Style="{StaticResource HorizontalUnderline}"/>
                </Grid>
                <Grid
                    Grid.Row="2"
                    Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.4*"/>
                        <ColumnDefinition Width="0.6*"/>
                    </Grid.ColumnDefinitions>
                    <Label
                        Grid.Column="0"
                        Content="DB Date"
                        Style="{StaticResource InputItemLabel}"/>
                    <DatePicker
                        Grid.Column="1"
                        SelectedDate="{Binding Specification.product.dbDate, Mode=TwoWay}"
                        Style="{StaticResource InputDatePicker}"/>
                    <Rectangle
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Style="{StaticResource HorizontalUnderline}"/>
                </Grid>
                <Grid
                    Grid.Row="3"
                    Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.4*"/>
                        <ColumnDefinition Width="0.6*"/>
                    </Grid.ColumnDefinitions>
                    <Label
                        Grid.Column="0"
                        Content="DHSI"
                        Style="{StaticResource InputItemLabel}"/>
                    <ComboBox
                        Grid.Column="1"
                        ItemsSource="{Binding COAComboBoxItems}"
                        Style="{StaticResource InputComboBoxStyle}"
                        SelectedItem="{Binding Specification.product.coa, Mode=TwoWay, Converter={StaticResource COAconverter}}"
                        Margin="40 0 0 10"/>
                    <Rectangle
                       Grid.Column="0"
                       Grid.ColumnSpan="2"
                       Style="{StaticResource HorizontalUnderline}"/>
                </Grid>
            </Grid>
        </Border>
    </Grid>

</ContentControl>
