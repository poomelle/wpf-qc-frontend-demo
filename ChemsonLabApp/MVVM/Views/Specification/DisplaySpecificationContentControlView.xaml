<ContentControl x:Class="ChemsonLabApp.MVVM.Views.Specification.DisplaySpecificationContentControlView"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                xmlns:converters="clr-namespace:ChemsonLabApp.Converters"
                xmlns:local="clr-namespace:ChemsonLabApp.MVVM.Views.Specification"
                mc:Ignorable="d">

    <ContentControl.Resources>
        <converters:COAConverter x:Key="COAconverter"/>
        <converters:InverseBoolConverter x:Key="InverseBoolConverter"/>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:BoolToActiveConverter x:Key="BoolToActiveConverter"/>
    </ContentControl.Resources>
    <Grid
        Background="{StaticResource White}">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Label
            Margin="20,0"
            Grid.Row="0"
            Content="Specification"
            FontSize="18"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"/>
        <Border
            Grid.Row="1"
            Style="{StaticResource UserInputBorder}">
            <Grid
                Margin="20 10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid
                    Margin="10"
                    Grid.Row="0"
                    Grid.RowSpan="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.4*"/>
                        <ColumnDefinition Width="0.6*"/>
                    </Grid.ColumnDefinitions>
                    <Label
                        Grid.Column="0"
                        Content="Product"
                        Style="{StaticResource InputItemLabel}"/>
                    <Label
                        Grid.Column="1"
                        Content="{Binding Specification.product.name}"
                        Style="{StaticResource EditViewLabel}"/>
                    <Rectangle
                        Grid.Row="1"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Style="{StaticResource HorizontalUnderline}"/>
                </Grid>
                <Grid
                    Grid.Row="2"
                    Margin="10"
                    VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.4*"/>
                        <ColumnDefinition Width="0.6*"/>
                    </Grid.ColumnDefinitions>
                    <Label
                        Grid.Column="0"
                        Content="Instrument"
                        Style="{StaticResource InputItemLabel}"/>
                    <Label
                        Grid.Column="1"
                        Content="{Binding Specification.machine.name}"
                        Style="{StaticResource EditViewLabel}"/>
                    <Rectangle
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Style="{StaticResource HorizontalUnderline}"/>
                </Grid>
                <Grid
                    Grid.Row="3"
                    Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.4*"/>
                        <ColumnDefinition Width="0.6*"/>
                    </Grid.ColumnDefinitions>
                    <Label
                        Grid.Column="0"
                        Content="Temp (°C)"
                        Style="{StaticResource InputItemLabel}"/>
                    <Label
                        Grid.Column="1"
                        Content="{Binding Specification.temp}"
                        Style="{StaticResource EditViewLabel}"/>
                    <Rectangle
                       Grid.Column="0"
                       Grid.ColumnSpan="2"
                       Style="{StaticResource HorizontalUnderline}"/>
                </Grid>
                <Grid
                    Grid.Row="4"
                    Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.4*"/>
                        <ColumnDefinition Width="0.6*"/>
                    </Grid.ColumnDefinitions>
                    <Label
                        Grid.Column="0"
                        Content="Load (g)"
                        Style="{StaticResource InputItemLabel}"/>
                    <Label
                        Grid.Column="1"
                        Content="{Binding Specification.load}"
                        Style="{StaticResource EditViewLabel}"/>
                    <Rectangle
                       Grid.Column="0"
                       Grid.ColumnSpan="2"
                       Style="{StaticResource HorizontalUnderline}"/>
                </Grid>
                <Grid
                    Grid.Row="5"
                    Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.4*"/>
                        <ColumnDefinition Width="0.6*"/>
                    </Grid.ColumnDefinitions>
                    <Label
                        Grid.Column="0"
                        Content="RPM"
                        Style="{StaticResource InputItemLabel}"/>
                    <Label
                        Grid.Column="1"
                        Content="{Binding Specification.rpm}"
                        Style="{StaticResource EditViewLabel}"/>
                    <Rectangle
                       Grid.Column="0"
                       Grid.ColumnSpan="2"
                       Style="{StaticResource HorizontalUnderline}"/>
                </Grid>
                <Grid
                    Grid.Row="6"
                    Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.4*"/>
                        <ColumnDefinition Width="0.6*"/>
                    </Grid.ColumnDefinitions>
                    <Label
                        Grid.Column="0"
                        Content="Torque Warning (%)"
                        Style="{StaticResource InputItemLabel}"/>
                    <Label
                        Grid.Column="1"
                        Content="{Binding Specification.product.torqueWarning}"
                        Style="{StaticResource EditViewLabel}"/>
                    <Rectangle
                       Grid.Column="0"
                       Grid.ColumnSpan="2"
                       Style="{StaticResource HorizontalUnderline}"/>
                </Grid>
                <Grid
                    Grid.Row="7"
                    Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.4*"/>
                        <ColumnDefinition Width="0.6*"/>
                    </Grid.ColumnDefinitions>
                    <Label
                        Grid.Column="0"
                        Content="Torque Fail (%)"
                        Style="{StaticResource InputItemLabel}"/>
                    <Label
                       Grid.Column="1"
                       Content="{Binding Specification.product.torqueFail}"
                       Style="{StaticResource EditViewLabel}"/>
                    <Rectangle
                       Grid.Column="0"
                       Grid.ColumnSpan="2"
                       Style="{StaticResource HorizontalUnderline}"/>
                </Grid>
                <Grid
                    Grid.Row="8"
                    Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.4*"/>
                        <ColumnDefinition Width="0.6*"/>
                    </Grid.ColumnDefinitions>
                    <Label
                        Grid.Column="0"
                        Content="Fusion Warning (%)"
                        Style="{StaticResource InputItemLabel}"/>
                    <Label
                       Grid.Column="1"
                       Content="{Binding Specification.product.fusionWarning}"
                       Style="{StaticResource EditViewLabel}"/>
                    <Rectangle
                       Grid.Column="0"
                       Grid.ColumnSpan="2"
                       Style="{StaticResource HorizontalUnderline}"/>
                </Grid>
                <Grid
                    Grid.Row="9"
                    Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.4*"/>
                        <ColumnDefinition Width="0.6*"/>
                    </Grid.ColumnDefinitions>
                    <Label
                        Grid.Column="0"
                        Content="Fusion Fail (%)"
                        Style="{StaticResource InputItemLabel}"/>
                    <Label
                       Grid.Column="1"
                       Content="{Binding Specification.product.fusionFail}"
                       Style="{StaticResource EditViewLabel}"/>
                    <Rectangle
                       Grid.Column="0"
                       Grid.ColumnSpan="2"
                       Style="{StaticResource HorizontalUnderline}"/>
                </Grid>
                <Grid
                    Grid.Row="10"
                    Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.4*"/>
                        <ColumnDefinition Width="0.6*"/>
                    </Grid.ColumnDefinitions>
                    <Label
                        Grid.Column="0"
                        Content="Colour"
                        Style="{StaticResource InputItemLabel}"/>
                    <Label
                       Grid.Column="1"
                       Content="{Binding Specification.product.colour}"
                       Style="{StaticResource EditViewLabel}"/>
                    <Rectangle
                       Grid.Column="0"
                       Grid.ColumnSpan="2"
                       Style="{StaticResource HorizontalUnderline}"/>
                </Grid>
                <Grid
                    Grid.Row="11"
                    Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.4*"/>
                        <ColumnDefinition Width="0.6*"/>
                    </Grid.ColumnDefinitions>
                    <Label
                        Grid.Column="0"
                        Content="Update Date"
                        Style="{StaticResource InputItemLabel}"/>
                    <Label
                        Grid.Column="1"
                        Content="{Binding Specification.product.updateDate}"
                        ContentStringFormat="dd/MM/yyyy"
                        Style="{StaticResource EditViewLabel}"/>
                    <Rectangle
                       Grid.Column="0"
                       Grid.ColumnSpan="2"
                       Style="{StaticResource HorizontalUnderline}"/>
                </Grid>
                <Grid
                    Grid.Row="12"
                    Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.4*"/>
                        <ColumnDefinition Width="0.6*"/>
                    </Grid.ColumnDefinitions>
                    <Label
                        Grid.Column="0"
                        Content="In Use"
                        Style="{StaticResource InputItemLabel}"/>
                    <Label
                        Grid.Column="1"
                        Content="{Binding Specification.inUse, Converter={StaticResource BoolToActiveConverter}}"
                        Style="{StaticResource EditViewLabel}"/>
                    <Rectangle
                       Grid.Column="0"
                       Grid.ColumnSpan="2"
                       Style="{StaticResource HorizontalUnderline}"/>
                </Grid>
            </Grid>
        </Border>
        <Label
            Margin="20,0"
            Grid.Row="2"
            Content="Sample and COA"
            FontSize="18"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"/>
        <Border
            Grid.Row="3"
            Style="{StaticResource UserInputBorder}">
            <Grid
                Margin="20 10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid
                    Grid.Row="0"
                    Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.4*"/>
                        <ColumnDefinition Width="0.6*"/>
                    </Grid.ColumnDefinitions>
                    <Label
                        Grid.Column="0"
                        Content="Sample Amount"
                        Style="{StaticResource InputItemLabel}"/>
                    <Label
                       Grid.Column="1"
                       Content="{Binding Specification.product.sampleAmount}"
                       Style="{StaticResource EditViewLabel}"/>
                    <Rectangle
                       Grid.Column="0"
                       Grid.ColumnSpan="2"
                       Style="{StaticResource HorizontalUnderline}"/>
                </Grid>
                <Grid
                    Grid.Row="1"
                    Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.4*"/>
                        <ColumnDefinition Width="0.6*"/>
                    </Grid.ColumnDefinitions>
                    <Label
                        Grid.Column="0"
                        Content="Comment"
                        Style="{StaticResource InputItemLabel}"/>
                    <Label
                       Grid.Column="1"
                       Content="{Binding Specification.product.comment}"
                       Style="{StaticResource EditViewLabel}"/>
                    <Rectangle
                       Grid.Column="0"
                       Grid.ColumnSpan="2"
                       Style="{StaticResource HorizontalUnderline}"/>
                </Grid>
                <Grid
                    Grid.Row="2"
                    Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.4*"/>
                        <ColumnDefinition Width="0.6*"/>
                    </Grid.ColumnDefinitions>
                    <Label
                        Grid.Column="0"
                        Content="DB Date"
                        Style="{StaticResource InputItemLabel}"/>
                    <Label
                        Grid.Column="1"
                        Content="{Binding Specification.product.dbDate}"
                        ContentStringFormat="dd/MM/yyyy"
                        Style="{StaticResource EditViewLabel}"/>
                    <Rectangle
                       Grid.Column="0"
                       Grid.ColumnSpan="2"
                       Style="{StaticResource HorizontalUnderline}"/>
                </Grid>
                <Grid
                    Grid.Row="3"
                    Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.4*"/>
                        <ColumnDefinition Width="0.6*"/>
                    </Grid.ColumnDefinitions>
                    <Label
                        Grid.Column="0"
                        Content="DHSI"
                        Style="{StaticResource InputItemLabel}"/>
                    <Label
                        Grid.Column="1"
                        Content="{Binding Specification.product.coa, Converter={StaticResource COAconverter}}"
                        Style="{StaticResource EditViewLabel}"/>
                    <Rectangle
                       Grid.Column="0"
                       Grid.ColumnSpan="2"
                       Style="{StaticResource HorizontalUnderline}"/>
                </Grid>
            </Grid>
        </Border>
    </Grid>

</ContentControl>
