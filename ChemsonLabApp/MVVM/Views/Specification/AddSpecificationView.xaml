<Window x:Class="ChemsonLabApp.MVVM.Views.Specification.AddSpecificationView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChemsonLabApp.MVVM.Views.Specification"
        xmlns:constants="clr-namespace:ChemsonLabApp.Constants"
        xmlns:converters="clr-namespace:ChemsonLabApp.Converters"
        xmlns:behaviors="http://schemas.microsoft.com/xaml/behaviors"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow"
        Title="Add New Specification" Height="720" Width="650">

    <Window.Resources>
        <converters:COAConverter x:Key="COAconverter"/>
    </Window.Resources>

    <ScrollViewer>
        <Grid
            Background="{StaticResource White}">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Label
                Padding="10"
                Grid.Row="0"
                Content="New Specification"
                FontWeight="Bold"
                FontSize="24"
                HorizontalAlignment="Left"/>
            <StackPanel
                Grid.Row="1"
                Orientation="Horizontal"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">
                <Button
                    Style="{StaticResource BaseButton}"
                    Content="Cancel"
                    Margin="20"
                    Click="CancelBtnClick"/>
                <Button
                    Style="{StaticResource BaseButton}"
                    Background="{StaticResource SaveGreen}"
                    Content="Save"
                    Command="{Binding SaveNewSpecificationCommand}"
                    Click="CancelBtnClick"/>
            </StackPanel>
            <Border
                Grid.Row="2"
                Style="{StaticResource UserInputBorder}">
                <Grid
                    Margin="20 10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid
                        Margin="10"
                        Grid.Row="0"
                        Grid.RowSpan="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.2*"/>
                            <ColumnDefinition Width="0.2*"/>
                            <ColumnDefinition Width="0.6*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Label
                            Grid.Column="0"
                            Grid.Row="0"
                            Grid.RowSpan="2"
                            Content="Product"
                            Style="{StaticResource InputItemLabel}"/>
                        <Label
                            Grid.Column="1"
                            Grid.Row="0"
                            Content="Existing"
                            FontSize="12"
                            Style="{StaticResource InputItemLabel}"/>
                        <Label
                            Grid.Column="1"
                            Grid.Row="1"
                            Content="Create New"
                            FontSize="12"
                            Style="{StaticResource InputItemLabel}"/>
                        <StackPanel
                            Grid.Column="2"
                            Grid.Row="0"
                            Orientation="Horizontal">
                            <RadioButton
                                x:Name="SelectExistingProductRadioBtn"
                                VerticalAlignment="Center"
                                Margin="10"
                                GroupName="IsExistingProduct"
                                IsChecked="{Binding UseExistingProduct, Mode=TwoWay}"/>
                            <ComboBox
                                Style="{StaticResource InputComboBoxStyle}"
                                IsEnabled="{Binding Source={x:Reference SelectExistingProductRadioBtn}, Path=IsChecked}"
                                ItemsSource="{Binding Products}"
                                SelectedItem="{Binding SelectedProduct, Mode=OneWayToSource}"
                                DisplayMemberPath="name">
                                <behaviors:Interaction.Triggers>
                                    <behaviors:EventTrigger EventName="SelectionChanged">
                                        <behaviors:InvokeCommandAction 
                                            Command="{Binding OnExistingProductSelection}"/>
                                    </behaviors:EventTrigger>
                                </behaviors:Interaction.Triggers>
                            </ComboBox>
                        </StackPanel>
                        <StackPanel
                            Grid.Column="2"
                            Grid.Row="1"
                            Orientation="Horizontal">
                            <RadioButton
                                x:Name="CreateNewProductRadioBtn"
                                VerticalAlignment="Center"
                                Margin="10"
                                GroupName="IsExistingProduct"/>
                            <TextBox
                                Style="{StaticResource InputTextBoxWithRadioBtn}"
                                Text="{Binding NewCreateProductName, Mode=OneWayToSource}"
                                IsEnabled="{Binding Source={x:Reference CreateNewProductRadioBtn}, Path=IsChecked}"/>
                        </StackPanel>
                        <Rectangle
                            Grid.Row="1"
                            Grid.Column="0"
                            Grid.ColumnSpan="3"
                            Style="{StaticResource HorizontalUnderline}"/>
                    </Grid>
                    <Grid
                        Grid.Row="2"
                        Margin="10"
                        VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.4*"/>
                            <ColumnDefinition Width="0.6*"/>
                        </Grid.ColumnDefinitions>
                        <Label
                            Grid.Column="0"
                            Content="Instrument"
                            Style="{StaticResource InputItemLabel}"/>
                        <ComboBox
                            Grid.Column="1"
                            Style="{StaticResource InputComboBoxStyle}"
                            ItemsSource="{Binding Instruments}"
                            SelectedItem="{Binding SelectedInstrument, Mode=OneWayToSource}"
                            DisplayMemberPath="name"
                            Margin="40,0,0,10"/>
                        <Rectangle
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Style="{StaticResource HorizontalUnderline}"/>
                    </Grid>
                    <Grid
                        Grid.Row="3"
                        Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.4*"/>
                            <ColumnDefinition Width="0.6*"/>
                        </Grid.ColumnDefinitions>
                        <Label
                            Grid.Column="0"
                            Content="Temp (°C)"
                            Style="{StaticResource InputItemLabel}"/>
                        <TextBox
                            Grid.Column="1"
                            Style="{StaticResource InputTextBox}"
                            Text="{Binding NewTemp, Mode=TwoWay}"/>
                        <Rectangle
                           Grid.Column="0"
                           Grid.ColumnSpan="2"
                           Style="{StaticResource HorizontalUnderline}"/>
                    </Grid>
                    <Grid
                        Grid.Row="4"
                        Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.4*"/>
                            <ColumnDefinition Width="0.6*"/>
                        </Grid.ColumnDefinitions>
                        <Label
                            Grid.Column="0"
                            Content="Load (g)"
                            Style="{StaticResource InputItemLabel}"/>
                        <TextBox
                            Grid.Column="1"
                            Style="{StaticResource InputTextBox}"
                            Text="{Binding NewLoad, Mode=TwoWay}"/>
                        <Rectangle
                           Grid.Column="0"
                           Grid.ColumnSpan="2"
                           Style="{StaticResource HorizontalUnderline}"/>
                    </Grid>
                    <Grid
                        Grid.Row="5"
                        Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.4*"/>
                            <ColumnDefinition Width="0.6*"/>
                        </Grid.ColumnDefinitions>
                        <Label
                            Grid.Column="0"
                            Content="RPM"
                            Style="{StaticResource InputItemLabel}"/>
                        <TextBox
                            Grid.Column="1"
                            Style="{StaticResource InputTextBox}"
                            Text="{Binding NewRPM, Mode=TwoWay}"/>
                        <Rectangle
                           Grid.Column="0"
                           Grid.ColumnSpan="2"
                           Style="{StaticResource HorizontalUnderline}"/>
                    </Grid>
                    <Grid
                        Grid.Row="6"
                        Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.4*"/>
                            <ColumnDefinition Width="0.6*"/>
                        </Grid.ColumnDefinitions>
                        <Label
                            Grid.Column="0"
                            Content="Torque Warning (%)"
                            Style="{StaticResource InputItemLabel}"/>
                        <TextBox
                            Grid.Column="1"
                            Style="{StaticResource InputTextBox}"
                            Text="{Binding NewTorqueWarning, Mode=TwoWay}"/>
                        <Rectangle
                           Grid.Column="0"
                           Grid.ColumnSpan="2"
                           Style="{StaticResource HorizontalUnderline}"/>
                    </Grid>
                    <Grid
                        Grid.Row="7"
                        Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.4*"/>
                            <ColumnDefinition Width="0.6*"/>
                        </Grid.ColumnDefinitions>
                        <Label
                            Grid.Column="0"
                            Content="Torque Fail (%)"
                            Style="{StaticResource InputItemLabel}"/>
                        <TextBox
                            Grid.Column="1"
                            Style="{StaticResource InputTextBox}"
                            Text="{Binding NewTorqueFail, Mode=TwoWay}"/>
                        <Rectangle
                           Grid.Column="0"
                           Grid.ColumnSpan="2"
                           Style="{StaticResource HorizontalUnderline}"/>
                    </Grid>
                    <Grid
                        Grid.Row="8"
                        Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.4*"/>
                            <ColumnDefinition Width="0.6*"/>
                        </Grid.ColumnDefinitions>
                        <Label
                            Grid.Column="0"
                            Content="Fusion Warning (%)"
                            Style="{StaticResource InputItemLabel}"/>
                        <TextBox
                            Grid.Column="1"
                            Style="{StaticResource InputTextBox}"
                            Text="{Binding NewFusionWarning, Mode=TwoWay}"/>
                        <Rectangle
                           Grid.Column="0"
                           Grid.ColumnSpan="2"
                           Style="{StaticResource HorizontalUnderline}"/>
                    </Grid>
                    <Grid
                        Grid.Row="9"
                        Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.4*"/>
                            <ColumnDefinition Width="0.6*"/>
                        </Grid.ColumnDefinitions>
                        <Label
                            Grid.Column="0"
                            Content="Fusion Fail (%)"
                            Style="{StaticResource InputItemLabel}"/>
                        <TextBox
                            Grid.Column="1"
                            Style="{StaticResource InputTextBox}"
                            Text="{Binding NewFusionFail, Mode=TwoWay}"/>
                        <Rectangle
                           Grid.Column="0"
                           Grid.ColumnSpan="2"
                           Style="{StaticResource HorizontalUnderline}"/>
                    </Grid>
                    <Grid
                        Grid.Row="10"
                        Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.4*"/>
                            <ColumnDefinition Width="0.6*"/>
                        </Grid.ColumnDefinitions>
                        <Label
                            Grid.Column="0"
                            Content="Colour"
                            Style="{StaticResource InputItemLabel}"/>
                        <TextBox
                            Grid.Column="1"
                            Style="{StaticResource InputTextBox}"
                            Text="{Binding NewColour, Mode=TwoWay}"/>
                        <Rectangle
                           Grid.Column="0"
                           Grid.ColumnSpan="2"
                           Style="{StaticResource HorizontalUnderline}"/>
                    </Grid>
                    <Grid
                        Grid.Row="11"
                        Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.4*"/>
                            <ColumnDefinition Width="0.6*"/>
                        </Grid.ColumnDefinitions>
                        <Label
                            Grid.Column="0"
                            Content="Update Date"
                            Style="{StaticResource InputItemLabel}"/>
                        <DatePicker
                            Grid.Column="1"
                            SelectedDate="{Binding NewUpdateDate, Mode=TwoWay}"
                            Style="{StaticResource InputDatePicker}"/>
                        <Rectangle
                           Grid.Column="0"
                           Grid.ColumnSpan="2"
                           Style="{StaticResource HorizontalUnderline}"/>
                    </Grid>
                </Grid>
            </Border>
            <StackPanel
                Grid.Row="3"
                Orientation="Horizontal"
                Margin="20"
                VerticalAlignment="Center">
                <CheckBox
                    x:Name="NewSampleOrCOA"
                    VerticalContentAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="0 10 10 10"
                    IsChecked="{Binding isAddingSampleOrCOA}"/>
                <Label
                    Content="New Sample and COA Specification"
                    FontSize="18"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"/>
            </StackPanel>
            <Border
                Grid.Row="4"
                Style="{StaticResource UserInputBorder}"
                IsEnabled="{Binding Source={x:Reference NewSampleOrCOA}, Path=IsChecked}">
                <Grid
                    Margin="20 10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid
                        Grid.Row="0"
                        Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.4*"/>
                            <ColumnDefinition Width="0.6*"/>
                        </Grid.ColumnDefinitions>
                        <Label
                            Grid.Column="0"
                            Content="Sample Amount"
                            Style="{StaticResource InputItemLabel}"/>
                        <TextBox
                            Grid.Column="1"
                            Style="{StaticResource InputTextBox}"
                            Text="{Binding NewSampleAmount, Mode=TwoWay}"/>
                        <Rectangle
                           Grid.Column="0"
                           Grid.ColumnSpan="2"
                           Style="{StaticResource HorizontalUnderline}"/>
                    </Grid>
                    <Grid
                        Grid.Row="1"
                        Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.4*"/>
                            <ColumnDefinition Width="0.6*"/>
                        </Grid.ColumnDefinitions>
                        <Label
                            Grid.Column="0"
                            Content="Comment"
                            Style="{StaticResource InputItemLabel}"/>
                        <TextBox
                            Grid.Column="1"
                            Style="{StaticResource InputTextBox}"
                            Text="{Binding NewComment, Mode=TwoWay}"/>
                        <Rectangle
                           Grid.Column="0"
                           Grid.ColumnSpan="2"
                           Style="{StaticResource HorizontalUnderline}"/>
                    </Grid>
                    <Grid
                        Grid.Row="2"
                        Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.4*"/>
                            <ColumnDefinition Width="0.6*"/>
                        </Grid.ColumnDefinitions>
                        <Label
                            Grid.Column="0"
                            Content="DB Date"
                            Style="{StaticResource InputItemLabel}"/>
                        <DatePicker
                            Grid.Column="1"
                            SelectedDate="{Binding NewDbDate, Mode=TwoWay}"
                            Style="{StaticResource InputDatePicker}"/>
                        <Rectangle
                           Grid.Column="0"
                           Grid.ColumnSpan="2"
                           Style="{StaticResource HorizontalUnderline}"/>
                    </Grid>
                    <Grid
                        Grid.Row="3"
                        Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.4*"/>
                            <ColumnDefinition Width="0.6*"/>
                        </Grid.ColumnDefinitions>
                        <Label
                            Grid.Column="0"
                            Content="COA"
                            Style="{StaticResource InputItemLabel}"/>
                        <ComboBox
                            Grid.Column="1"
                            ItemsSource="{Binding COAComboBoxItems}"
                            Style="{StaticResource InputComboBoxStyle}"
                            SelectedItem="{Binding SelectedCOA, Mode=TwoWay, Converter={StaticResource COAconverter}}"
                            Margin="40 0 0 10"/>
                        <Rectangle
                           Grid.Column="0"
                           Grid.ColumnSpan="2"
                           Style="{StaticResource HorizontalUnderline}"/>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </ScrollViewer>
</Window>
